.search-header-bar{position: relative;}
.search-header-bar .header-search-form{padding:0;}
.search-header-bar .header-search-box{height:25px;padding:10px;}
.header-search-input{position:relative;margin-right: 50px;}
.header-search-input input{height:25px;padding-top:5px;padding-bottom: 5px;}
.search-clear{right:10px;top:50%;margin-top: -7px;}
.header-search-operate{top:10px;right:10px;width:45px;height:25px;}
.header-search-operate .btn{width:100%;height:100%;margin:0;line-height: 25px;font-size: 14px;}
.goods-list{background: #fff;}
.searchRes .goods-name{height: 21px; line-height: 21px;margin-bottom: 8px;}
.goods-price{float:none;display:block;font-size:18px;margin-bottom: 8px;}
.goods-praise{font-size:12px;color:#878787;line-height: 22px;vertical-align: middle;}
.sr-filter{display: table;width: 100%;border-bottom: 1px solid #999;  border-top: 1px solid #999;}
.sr-filter a {display: table-cell;width: 25%;height: 44px;font-size:14px;text-align: center;line-height: 44px;color: #666;}
.sr-found,.s-null{padding:0 10px;font-size:14px;color:#999;line-height: 44px;background: #fff;border-bottom: 1px solid #e5e5e5;white-space: nowrap;}
.sr-filter a .ico{margin-left:5px;vertical-align: baseline;}
.ico-sort-single{width:9px;height:9px;background-image: url(../images/sort-single.png);background-size: 18px 9px;}
.sr-filter-item.select{color:#ff9400;}
.sr-filter-item.select .ico-sort{background-position: -9px 0;}
.sr-filter-item.select.switch .ico-sort{background-position: -18px 0;}
.sr-filter-item.select .ico-sort-single{background-position: -9px 0;}
.ico-sort{width:9px;height:13px;background-image: url(../images/sprit-sort.png);background-size: 27px 13px;}