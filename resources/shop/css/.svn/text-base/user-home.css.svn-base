.user-home{padding-bottom: 82px;}
.user-home-item{position:relative;margin-bottom:10px;background: #fff;}
.user-home-item .user-link{display: block;}
.user-link:active{background: #e5e5e5;}
.user-data .user-link{position: relative;}
.user-avatar{padding:17px 10px;}
.user-avatar-img{display:inline;float:left;width:54px;height:54px;margin:0 10px;
border: 1px solid #e6e6e6;-webkit-border-radius:28px;-moz-border-radius:28px;border-radius:28px;overflow: hidden;}
.user-avatar-img img{width:54px;height:54px;vertical-align: top;-webkit-border-radius:50%;-moz-border-radius:50%;border-radius: 50%;}
.user-avatar-txt{padding:8px 0;}
.user-name,.user-avatar-txt span{white-space: nowrap;text-overflow:ellipsis;overflow: hidden;}
.user-name{height:21px;font-size:16px;line-height:21px;}
.user-avatar-txt span{display: block;height:19px;font-size:14px;color:#999;line-height: 19px;}
.link-point{display: block;position: absolute;top:50%;right:10px;width:5px;height:10px;margin-top:-5px;background-image:url(../images/slice/ico-arrow-right-sm.png);background-size:5px 10px;overflow: hidden;}

.user-asset{display: table;position:relative;width: 100%;border-top: 1px solid #e5e5e5;border-bottom: 1px solid #e5e5e5;}
.ua-item{display: table-cell;width: 50%;border-right:1px solid #e5e5e5;vertical-align: middle;}
.ua-item .user-link{padding:12px 0;}
.ua-scores .user-link:active{background: none;}
.ua-item .ico{margin-left:11.111111%;}
.ua-item .ua-item-txt{display: inline-block;width:61.666667%;text-align: center;color:#999;vertical-align: middle;}
.ua-item .user-link{font-size:0;letter-spacing: -4px;word-spacing: -4px;}
.ua-item .ua-item-txt p{font-size:16px;line-height: 21px;letter-spacing: normal;word-spacing: normal;}
.ua-item .ua-item-txt span{display:block;font-size:14px;line-height: 19px;letter-spacing: normal;word-spacing: normal;}
.user-order{position:relative;display: table;width:100%;font-size:12px;}
.user-order:after{content:"";position: absolute;left:0;bottom:0;width:100%;height:1px;background:#e5e5e5;overflow: hidden;}
.user-order .user-link{display:table-cell;width:25%;padding:7px 5px 3px;text-align: center;}
.user-order .user-link:link,.user-order .user-link:visited,.user-order .user-link:active{color:#878787;}
.user-order span{display: block;height:20px;line-height: 20px;}
.user-more .user-link{position: relative;padding:17px 0;font-size:14px;}
.user-more .user-link:after{content:"";position: absolute;left:0;bottom:0;width: 100%;height:1px;background: #e5e5e5;}
.user-more .user-link .ico{margin:0 10px;}
.user-more .user-link span{display:inline-block;line-height: 15px;}
.um-pack span>em{margin:0 10px;color:#71a91b;}
